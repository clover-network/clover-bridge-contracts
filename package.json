{
  "scripts": {
    "compile": "truffle compile --all",
    "migrate:smartchain": "truffle compile --all && truffle migrate --network smartchain",
    "migrate:mainnet": "truffle compile --all && truffle migrate --network mainnet",
    "verify:smartchain": "truffle run verify --network smartchain CloverToken CloverBridge",
    "verify:mainnet": "truffle run verify --network mainnet CloverToken CloverBridge",
    "build:addresses": "node scripts/build_abi.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": ">=4.4.1"
  },
  "license": "MIT",
  "devDependencies": {
    "hardhat": "^2.9.3"
  },
  "volta": {
    "node": "16.15.0"
  }
}
